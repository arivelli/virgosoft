APP_NAME=Virgosoft
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://virgosoft.local.xima.com.ar

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=virgosoft
DB_USERNAME=virgosoft
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Docker and Infrastructure Configuration
PROJECT_ROOT=/var/www/html
# Optional: host/dev path (use docker-compose.override.yml locally if needed)
PROJECT_PATH=
PROJECT_NAME=virgosoft

# Domain Configuration
DOMAIN=virgosoft.local.xima.com.ar
API_DOMAIN=api.virgosoft.local.xima.com.ar

# Network Configuration
NETWORK_SUBNET=10.222.0.0/16
NETWORK_GATEWAY=10.222.0.1

# Container IP Addresses
API_IP=10.222.0.10
SCHEDULER_IP=10.222.0.11
NGINX_IP=10.222.0.30
MYSQL_IP=10.222.0.50
REDIS_IP=10.222.0.60

# Database Configuration
MYSQL_ROOT_PASSWORD=root
DB_DATABASE=virgosoft
DB_USERNAME=virgosoft
DB_PASSWORD=secret

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/certs/${DOMAIN}.cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/certs/${DOMAIN}.key.pem
API_SSL_CERT_PATH=/etc/nginx/ssl/certs/${API_DOMAIN}.cert.pem
API_SSL_KEY_PATH=/etc/nginx/ssl/certs/${API_DOMAIN}.key.pem

# CA Configuration
CA_NAME="${PROJECT_NAME:-virgosoft} Local CA"
ORGANIZATION="${PROJECT_NAME:-virgosoft} Project"
